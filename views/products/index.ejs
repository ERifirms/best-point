<% layout('layouts/app') %>

<div class="container">
  <h1 class="text-gray-700 font-semibold ml-20 my-12 text-xl">All Products</h1>
  <div class="flex flex-wrap items-center justify-center min-h-screen gap-1">
    <% for(const product of products) {%>
    <a
      href="/products/<%= product._id %>"
      class="md:w-[180px] w-[150px] rounded overflow-hidden shadow-lg mx-3 mb-5"
    >
      <img
        class="w-full"
        src="/images/<%= product.images[0].filename %>"
        alt="<%= product.title %>"
      />
      <div class="px-6 py-4">
        <div class="font-semibold text-[12px] md:text-sm mb-2">
          <%= product.title %>
        </div>
        <p class="text-gray-700 text-[12px] leading-2 line-clamp-2">
          <%= product.description %>
        </p>
      </div>
      <div class="px-6 pt-4 pb-2">
        <p
          class="px-3 py-1 text-sm font-semibold text-red-400 mr-2 mb-2 items-end flex flex-col"
        >
          Rp. <%= product.price %>
        </p>
      </div>
    </a>
    <% } %>
  </div>
</div>
